{% extends "base.html.twig" %}

{% block title %}
	Employé
{% endblock %}

{% block body %}
	<h1 class="text-center my-5">{{ employe.prenom }}
		{{ employe.nom }}
		infos:</h1>
	<div class="container">
		<div class="card text-center my-5">
			<div class="card-header">
				Email : {{ employe.email }}
			</div>
			<div class="card-body">
				<blockquote class="blockquote mb-0">
					<p>Adresse : {{ employe.adresse }}</p>
					<p>Numéro de téléphone : {{ employe.telephone }}</p>
					<p>Poste : {{ employe.poste }}</p>
					<p>Salaire : {{ employe.salaire }}</p>
				</blockquote>
			</div>
		</div>
	</div>

{% endblock %}
